@page
@model SmachotMemories.Pages.EventMediaItemsModel
@using SmachotMemories.Models.Enums
@{
    var pageTitle = Model.AlbumId.HasValue && !string.IsNullOrEmpty(Model.AlbumName)
        ? $"Album: {Model.AlbumName}"
        : "Media Items";
    ViewData["Title"] = $"{pageTitle} - {Model.EventName}";
}

<div class="media-page-container">
    <div class="page-header">
        <h1><i class="dx-icon-video"></i> @pageTitle</h1>
        <p class="subtitle">@Model.EventName</p>
    </div>

    @if (Model.AlbumId.HasValue)
    {
        <div class="filter-info">
            <span class="filter-badge">
                📁 Showing media from album: <strong>@Model.AlbumName</strong>
            </span>
            <a href="/EventMediaItems?EventId=@Model.EventId" class="btn-clear-filter">
                <i class="dx-icon-close"></i> Show All Media
            </a>
        </div>
    }

    <div class="stats-bar">
        <div class="stat-item">
            <span class="stat-number">@Model.MediaItems.Count</span>
            <span class="stat-label">@(Model.AlbumId.HasValue ? "In Album" : "Total Items")</span>
        </div>
        <div class="stat-item">
            <span class="stat-number">@Model.MediaItems.Count(m => m.MediaType == MediaTypeEnum.Image)</span>
            <span class="stat-label">Photos</span>
        </div>
        <div class="stat-item">
            <span class="stat-number">@Model.MediaItems.Count(m => m.MediaType == MediaTypeEnum.Video)</span>
            <span class="stat-label">Videos</span>
        </div>
        @if (!Model.AlbumId.HasValue)
        {
            <div class="stat-item">
                <span class="stat-number">@Model.Albums.Count</span>
                <span class="stat-label">Albums</span>
            </div>
        }
    </div>

    <!-- Download All Button -->
    @if (Model.MediaItems.Any())
    {
        <div class="download-section">
            <form method="post" asp-page-handler="DownloadAll">
                <input type="hidden" name="eventId" value="@Model.EventId" />
                <input type="hidden" name="albumId" value="@Model.AlbumId" />
                <button type="submit" class="btn-download-all">
                    <i class="dx-icon-download"></i>
                    @if (Model.AlbumId.HasValue)
                    {
                        <span>Download Album as ZIP (@Model.MediaItems.Count files)</span>
                    }
                    else
                    {
                        <span>Download All Media as ZIP (@Model.MediaItems.Count files)</span>
                    }
                </button>
            </form>
        </div>
    }

    @if (!Model.MediaItems.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">📷</div>
            @if (Model.AlbumId.HasValue)
            {
                <h3>No media in this album</h3>
                <p>This album doesn't have any media items yet.</p>
                <a href="/EventMediaItems?EventId=@Model.EventId" class="btn-show-all">Show All Media</a>
            }
            else
            {
                <h3>No media items yet</h3>
                <p>Media uploaded by guests will appear here.</p>
            }
        </div>
    }
    else
    {
        <div class="media-grid">
            @foreach (var media in Model.MediaItems)
            {
                <div class="media-card">
                    <div class="media-preview">
                        @if (media.MediaType == MediaTypeEnum.Image)
                        {
                            <img src="~/@media.FileUrl" alt="Media" loading="lazy" />
                            <span class="media-type-badge image-badge">
                                <i class="dx-icon-image"></i>
                            </span>
                        }
                        else
                        {
                            <video src="~/@media.FileUrl" preload="metadata"></video>
                            <span class="media-type-badge video-badge">
                                <i class="dx-icon-video"></i>
                                @if (media.DurationSeconds.HasValue)
                                {
                                    <span class="duration">@media.DurationSeconds s</span>
                                }
                            </span>
                        }
                        @if (!media.IsPublic)
                        {
                            <span class="private-badge" title="Private">🔒</span>
                        }
                        <!-- Delete Button -->
                        <form method="post" asp-page-handler="DeleteMedia" class="delete-media-form" onsubmit="return confirm('Are you sure you want to delete this media item? This action cannot be undone.');">
                            <input type="hidden" name="eventId" value="@Model.EventId" />
                            <input type="hidden" name="albumId" value="@Model.AlbumId" />
                            <input type="hidden" name="mediaId" value="@media.MediaId" />
                            <button type="submit" class="btn-delete-media" title="Delete media">
                                <i class="dx-icon-trash"></i>
                            </button>
                        </form>
                    </div>
                    <div class="media-info">
                        <div class="media-meta">
                            @if (!string.IsNullOrEmpty(media.GuestName))
                            {
                                <span class="guest-name" title="Uploaded by">
                                    <i class="dx-icon-user"></i> @media.GuestName
                                </span>
                            }
                            <span class="upload-date" title="Upload date">
                                <i class="dx-icon-clock"></i> @media.UploadedAt.ToString("dd/MM/yyyy HH:mm")
                            </span>
                        </div>

                        <!-- Albums Section -->
                        <div class="albums-section">
                            <label class="albums-label">Albums:</label>
                            @if (media.Albums.Any())
                            {
                                <div class="current-albums">
                                    @foreach (var album in media.Albums)
                                    {
                                        <span class="album-tag">
                                            📁 @album.Name
                                            <form method="post" asp-page-handler="RemoveFromAlbum" class="remove-album-form">
                                                <input type="hidden" name="eventId" value="@Model.EventId" />
                                                <input type="hidden" name="albumId" value="@Model.AlbumId" />
                                                <input type="hidden" name="mediaId" value="@media.MediaId" />
                                                <input type="hidden" name="albumIdToRemove" value="@album.AlbumId" />
                                                <button type="submit" class="btn-remove-album" title="Remove from album">×</button>
                                            </form>
                                        </span>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="no-albums">No albums assigned</span>
                            }

                            <!-- Add to Album Dropdown -->
                            @{
                                var availableAlbums = Model.Albums.Where(a => !media.Albums.Any(ma => ma.AlbumId == a.AlbumId)).ToList();
                            }
                            @if (availableAlbums.Any())
                            {
                                <div class="add-album-dropdown">
                                    <form method="post" asp-page-handler="AddToAlbum">
                                        <input type="hidden" name="eventId" value="@Model.EventId" />
                                        <input type="hidden" name="albumId" value="@Model.AlbumId" />
                                        <input type="hidden" name="mediaId" value="@media.MediaId" />
                                        <select name="albumIdToAdd" class="album-dropdown" onchange="if(this.value) this.form.submit()">
                                            <option value="">+ Add to album...</option>
                                            @foreach (var album in availableAlbums)
                                            {
                                                <option value="@album.AlbumId">@album.Name</option>
                                            }
                                        </select>
                                    </form>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="back-link">
        @if (Model.AlbumId.HasValue)
        {
            <a href="/EventAlbums?EventId=@Model.EventId" class="btn-back">
                <i class="dx-icon-arrowleft"></i> Back to Albums
            </a>
        }
        else
        {
            <a href="/EventDetails?EventId=@Model.EventId" class="btn-back">
                <i class="dx-icon-arrowleft"></i> Back to Event Details
            </a>
        }
    </div>
</div>

<!-- Lightbox Modal -->
<div id="lightbox" class="lightbox" onclick="closeLightbox()">
    <span class="lightbox-close">&times;</span>
    <img id="lightbox-img" class="lightbox-content" />
    <video id="lightbox-video" class="lightbox-content" controls></video>
</div>

<style>
    .media-page-container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .page-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .page-header h1 {
        font-size: 2.2rem;
        color: #333;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

    .page-header h1 i {
        color: #f5576c;
    }

    .subtitle {
        font-size: 1.1rem;
        color: #666;
        margin: 0;
    }

    /* Filter Info */
    .filter-info {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 16px;
        padding: 16px 24px;
        background: #e0e7ff;
        border-radius: 12px;
        margin-bottom: 24px;
        flex-wrap: wrap;
    }

    .filter-badge {
        font-size: 1rem;
        color: #4338ca;
    }

    .btn-clear-filter {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        padding: 8px 16px;
        background: white;
        color: #667eea;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        font-size: 0.9rem;
        transition: all 0.2s ease;
    }

    .btn-clear-filter:hover {
        background: #667eea;
        color: white;
    }

    .stats-bar {
        display: flex;
        justify-content: center;
        gap: 40px;
        padding: 20px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 12px;
        margin-bottom: 30px;
        color: white;
        flex-wrap: wrap;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        display: block;
        font-size: 2rem;
        font-weight: 700;
    }

    .stat-label {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .download-section {
        text-align: center;
        margin-bottom: 30px;
    }

    .btn-download-all {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 14px 28px;
        background: linear-gradient(135deg, #10b981 0%, #059669 100%);
        color: white;
        text-decoration: none;
        border: none;
        border-radius: 8px;
        font-weight: 600;
        font-size: 1rem;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .btn-download-all:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(16, 185, 129, 0.4);
    }

    .btn-download-all:active {
        transform: translateY(0);
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: #f9f9f9;
        border-radius: 16px;
        margin: 40px 0;
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        color: #333;
        margin-bottom: 10px;
    }

    .empty-state p {
        color: #666;
        margin-bottom: 20px;
    }

    .btn-show-all {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn-show-all:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .media-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
        gap: 24px;
        margin-bottom: 40px;
    }

    .media-card {
        background: white;
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .media-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    }

    .media-preview {
        position: relative;
        width: 100%;
        height: 220px;
        background: #f0f0f0;
        overflow: hidden;
        cursor: pointer;
    }

    .media-preview img,
    .media-preview video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .media-preview:hover img,
    .media-preview:hover video {
        transform: scale(1.05);
    }

    .media-type-badge {
        position: absolute;
        top: 12px;
        left: 12px;
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 0.85rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .image-badge {
        background: rgba(102, 126, 234, 0.9);
        color: white;
    }

    .video-badge {
        background: rgba(245, 87, 108, 0.9);
        color: white;
    }

    .duration {
        font-size: 0.8rem;
    }

    .private-badge {
        position: absolute;
        top: 12px;
        right: 12px;
        background: rgba(0, 0, 0, 0.6);
        padding: 6px 10px;
        border-radius: 20px;
        font-size: 0.85rem;
    }

    /* Delete Media Button */
    .delete-media-form {
        position: absolute;
        bottom: 12px;
        right: 12px;
        margin: 0;
        padding: 0;
        opacity: 0;
        transition: opacity 0.2s ease;
    }

    .media-preview:hover .delete-media-form {
        opacity: 1;
    }

    .btn-delete-media {
        background: rgba(239, 68, 68, 0.9);
        border: none;
        color: white;
        width: 36px;
        height: 36px;
        border-radius: 50%;
        font-size: 16px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }

    .btn-delete-media:hover {
        background: rgba(220, 38, 38, 1);
        transform: scale(1.1);
    }

    .media-info {
        padding: 16px;
    }

    .media-meta {
        display: flex;
        flex-direction: column;
        gap: 8px;
        margin-bottom: 12px;
        font-size: 0.9rem;
        color: #666;
    }

    .media-meta span {
        display: flex;
        align-items: center;
        gap: 6px;
    }

    .guest-name {
        color: #333;
        font-weight: 500;
    }

    /* Albums Section */
    .albums-section {
        margin-top: 12px;
        padding-top: 12px;
        border-top: 1px solid #eee;
    }

    .albums-label {
        font-size: 0.9rem;
        color: #666;
        font-weight: 500;
        display: block;
        margin-bottom: 8px;
    }

    .current-albums {
        display: flex;
        flex-wrap: wrap;
        gap: 8px;
        margin-bottom: 10px;
    }

    .album-tag {
        display: inline-flex;
        align-items: center;
        gap: 6px;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 500;
    }

    .remove-album-form {
        display: inline;
        margin: 0;
        padding: 0;
    }

    .btn-remove-album {
        background: rgba(255, 255, 255, 0.3);
        border: none;
        color: white;
        width: 18px;
        height: 18px;
        border-radius: 50%;
        font-size: 14px;
        line-height: 1;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        transition: all 0.2s ease;
        padding: 0;
    }

    .btn-remove-album:hover {
        background: rgba(255, 255, 255, 0.5);
    }

    .no-albums {
        font-size: 0.85rem;
        color: #999;
        font-style: italic;
        display: block;
        margin-bottom: 10px;
    }

    .add-album-dropdown {
        margin-top: 8px;
    }

    .add-album-dropdown form {
        display: block;
    }

    .album-dropdown {
        width: 100%;
        padding: 8px 12px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        font-size: 0.9rem;
        background: white;
        cursor: pointer;
        transition: all 0.2s ease;
    }

    .album-dropdown:hover {
        border-color: #667eea;
    }

    .album-dropdown:focus {
        outline: none;
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
    }

    .back-link {
        text-align: center;
        margin-top: 30px;
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background-color: #f5f5f5;
        color: #333;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn-back:hover {
        background-color: #e0e0e0;
        color: #333;
    }

    /* Lightbox styles */
    .lightbox {
        display: none;
        position: fixed;
        z-index: 9999;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.95);
        justify-content: center;
        align-items: center;
    }

    .lightbox.active {
        display: flex;
    }

    .lightbox-close {
        position: absolute;
        top: 20px;
        right: 35px;
        color: white;
        font-size: 40px;
        font-weight: bold;
        cursor: pointer;
        z-index: 10000;
    }

    .lightbox-content {
        max-width: 90%;
        max-height: 90%;
        border-radius: 8px;
        display: none;
    }

    .lightbox-content.active {
        display: block;
    }

    @@media (max-width: 768px) {
        .stats-bar {
            gap: 20px;
        }

        .stat-number {
            font-size: 1.5rem;
        }

        .media-grid {
            grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
            gap: 16px;
        }

        .page-header h1 {
            font-size: 1.8rem;
        }

        .filter-info {
            flex-direction: column;
            text-align: center;
        }
    }
</style>

<script>
    // Click on media preview to open lightbox
    document.querySelectorAll('.media-preview').forEach(preview => {
        preview.addEventListener('click', function (e) {
            const img = this.querySelector('img');
            const video = this.querySelector('video');
            const lightbox = document.getElementById('lightbox');
            const lightboxImg = document.getElementById('lightbox-img');
            const lightboxVideo = document.getElementById('lightbox-video');

            lightboxImg.classList.remove('active');
            lightboxVideo.classList.remove('active');

            if (img) {
                lightboxImg.src = img.src;
                lightboxImg.classList.add('active');
            } else if (video) {
                lightboxVideo.src = video.src;
                lightboxVideo.classList.add('active');
            }

            lightbox.classList.add('active');
        });
    });

    function closeLightbox() {
        const lightbox = document.getElementById('lightbox');
        const lightboxVideo = document.getElementById('lightbox-video');
        lightbox.classList.remove('active');
        lightboxVideo.pause();
        lightboxVideo.src = '';
    }

    // Close on escape key
    document.addEventListener('keydown', function (e) {
        if (e.key === 'Escape') {
            closeLightbox();
        }
    });
</script>