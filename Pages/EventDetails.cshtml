@page
@model SmachotMemories.Pages.EventDetailsModel
@{
    ViewData["Title"] = $"Event: {Model.EventName}";
}

<div class="event-details-container">
    <h1 class="event-title">@Model.EventName</h1>
    <p class="event-subtitle">Manage your event content</p>
    
    <div class="cards-grid">
        <a href="/EventAlbums?EventId=@Model.EventId" class="card-link">
            <div class="card albums-card">
                <div class="card-icon">
                    <i class="dx-icon-image"></i>
                </div>
                <h3>Albums</h3>
                <p>Manage photo albums</p>
            </div>
        </a>
        
        <a href="/EventMediaItems?EventId=@Model.EventId" class="card-link">
            <div class="card media-card">
                <div class="card-icon">
                    <i class="dx-icon-video"></i>
                </div>
                <h3>Media Items</h3>
                <p>Photos & videos</p>
            </div>
        </a>
        
        <a href="/EventGoldenBookEntries?EventId=@Model.EventId" class="card-link">
            <div class="card goldenbook-card">
                <div class="card-icon">
                    <i class="dx-icon-comment"></i>
                </div>
                <h3>Golden Book</h3>
                <p>Guest messages & wishes</p>
            </div>
        </a>
        
        <a href="/EventPayments?EventId=@Model.EventId" class="card-link">
            <div class="card payments-card">
                <div class="card-icon">
                    <i class="dx-icon-money"></i>
                </div>
                <h3>Payments</h3>
                <p>Financial transactions</p>
            </div>
        </a>
    </div>
    
    <div class="back-link">
        <a href="/Events" class="btn-back">
            <i class="dx-icon-arrowleft"></i> Back to Events
        </a>
    </div>
</div>

<style>
    .event-details-container {
        max-width: 900px;
        margin: 0 auto;
        padding: 40px 20px;
        text-align: center;
    }
    
    .event-title {
        font-size: 2.5rem;
        color: #333;
        margin-bottom: 8px;
        font-weight: 600;
    }
    
    .event-subtitle {
        font-size: 1.1rem;
        color: #666;
        margin-bottom: 40px;
    }
    
    .cards-grid {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 24px;
        margin-bottom: 40px;
    }
    
    .card-link {
        text-decoration: none;
    }
    
    .card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border-radius: 16px;
        padding: 40px 30px;
        color: white;
        transition: all 0.3s ease;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        min-height: 180px;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }
    
    .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.25);
    }
    
    .albums-card {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
    
    .media-card {
        background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }
    
    .goldenbook-card {
        background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
    }
    
    .payments-card {
        background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%);
    }
    
    .card-icon {
        font-size: 3rem;
        margin-bottom: 16px;
    }
    
    .card-icon i {
        font-size: 48px;
    }
    
    .card h3 {
        font-size: 1.5rem;
        margin: 0 0 8px 0;
        font-weight: 600;
    }
    
    .card p {
        font-size: 0.95rem;
        margin: 0;
        opacity: 0.9;
    }
    
    .back-link {
        margin-top: 20px;
    }
    
    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background-color: #f5f5f5;
        color: #333;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
    }
    
    .btn-back:hover {
        background-color: #e0e0e0;
        color: #333;
    }
    
    @@media (max-width: 600px) {
        .cards-grid {
            grid-template-columns: 1fr;
        }
        
        .event-title {
            font-size: 1.8rem;
        }
        
        .card {
            padding: 30px 20px;
            min-height: 150px;
        }
    }
</style>
