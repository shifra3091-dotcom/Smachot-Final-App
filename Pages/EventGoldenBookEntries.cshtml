@page
@model SmachotMemories.Pages.EventGoldenBookEntriesModel
@{
    ViewData["Title"] = $"Golden Book - {Model.EventName}";
}

<div class="golden-book-container">
    <div class="page-header">
        <h1><i class="dx-icon-bookmark"></i> 📖 Golden Book</h1>
        <p class="subtitle">@Model.EventName</p>
    </div>

    <div class="stats-bar">
        <div class="stat-item">
            <span class="stat-number">@Model.Entries.Count</span>
            <span class="stat-label">Total Entries</span>
        </div>
        @if (Model.Entries.Any())
        {
            <div class="stat-item">
                <span class="stat-number">@Model.Entries.Min(e => e.CreatedAt).ToString("dd/MM/yyyy")</span>
                <span class="stat-label">First Entry</span>
            </div>
            <div class="stat-item">
                <span class="stat-number">@Model.Entries.Max(e => e.CreatedAt).ToString("dd/MM/yyyy")</span>
                <span class="stat-label">Latest Entry</span>
            </div>
        }
    </div>

    @if (Model.Entries.Any())
    {
        <div class="action-bar">
            <form method="post" asp-page-handler="DownloadPdf">
                <input type="hidden" name="EventId" value="@Model.EventId" />
                <button type="submit" class="btn-download-pdf">
                    <i class="dx-icon-exportpdf"></i> 📥 הורד ברכות ל-PDF
                </button>
            </form>
        </div>
    }

    @if (!Model.Entries.Any())
    {
        <div class="empty-state">
            <div class="empty-icon">📝</div>
            <h3>No entries yet</h3>
            <p>Golden Book entries from guests will appear here.</p>
        </div>
    }
    else
    {
        <div class="entries-grid">
            @foreach (var entry in Model.Entries.OrderByDescending(e => e.CreatedAt))
            {
                <div class="entry-card">
                    <div class="entry-header">
                        <span class="entry-date">
                            <i class="dx-icon-clock"></i>
                            @entry.CreatedAt.ToString("dd MMM yyyy, HH:mm")
                        </span>
                        <div class="entry-actions">
                            <span class="entry-number">#@entry.GoldenBookEntryId</span>
                            <form method="post" asp-page-handler="Delete" class="delete-form" onsubmit="return confirm('Are you sure you want to delete this entry?');">
                                <input type="hidden" name="EventId" value="@Model.EventId" />
                                <input type="hidden" name="entryId" value="@entry.GoldenBookEntryId" />
                                <button type="submit" class="btn-delete" title="Delete entry">
                                    🗑️
                                </button>
                            </form>
                        </div>
                    </div>
                    @if (!string.IsNullOrWhiteSpace(entry.SenderName))
                    {
                        <div class="entry-sender">
                            <span class="sender-label">מאת:</span>
                            <span class="sender-name">@entry.SenderName</span>
                        </div>
                    }
                    <div class="entry-content">
                        <div class="quote-mark start">"</div>
                        <div class="entry-text">@entry.Content</div>
                        <div class="quote-mark end">"</div>
                    </div>
                    <div class="entry-footer">
                        <span class="entry-icon">✨</span>
                    </div>
                </div>
            }
        </div>
    }

    <div class="back-link">
        <a href="/EventDetails?EventId=@Model.EventId" class="btn-back">
            <i class="dx-icon-arrowleft"></i> Back to Event Details
        </a>
    </div>
</div>

<style>
    .golden-book-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 30px 20px;
    }

    .page-header {
        text-align: center;
        margin-bottom: 30px;
    }

    .page-header h1 {
        font-size: 2.2rem;
        color: #333;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
    }

    .subtitle {
        font-size: 1.1rem;
        color: #666;
        margin: 0;
    }

    .stats-bar {
        display: flex;
        justify-content: center;
        gap: 40px;
        padding: 20px;
        background: linear-gradient(135deg, #d4a574 0%, #c9956c 50%, #b8860b 100%);
        border-radius: 12px;
        margin-bottom: 30px;
        color: white;
        flex-wrap: wrap;
    }

    .stat-item {
        text-align: center;
    }

    .stat-number {
        display: block;
        font-size: 1.5rem;
        font-weight: 700;
    }

    .stat-label {
        font-size: 0.9rem;
        opacity: 0.9;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: linear-gradient(135deg, #fef9f3 0%, #fdf4e8 100%);
        border-radius: 16px;
        margin: 40px 0;
        border: 2px dashed #d4a574;
    }

    .empty-icon {
        font-size: 4rem;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        color: #333;
        margin-bottom: 10px;
    }

    .empty-state p {
        color: #666;
    }

    .entries-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 24px;
        margin-bottom: 40px;
    }

    .entry-card {
        background: linear-gradient(145deg, #fffef9 0%, #fdf8f0 100%);
        border-radius: 16px;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        border: 1px solid #e8dcc8;
        position: relative;
    }

    .entry-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: linear-gradient(90deg, #d4a574, #b8860b, #d4a574);
    }

    .entry-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 12px 35px rgba(184, 134, 11, 0.15);
    }

    .entry-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 16px 20px 12px;
        border-bottom: 1px solid #f0e6d8;
    }

    .entry-sender {
        padding: 12px 20px;
        background: linear-gradient(135deg, #faf5ed 0%, #f5efe6 100%);
        border-bottom: 1px solid #f0e6d8;
        display: flex;
        align-items: center;
        gap: 8px;
        direction: rtl;
    }

    .sender-label {
        font-size: 0.85rem;
        color: #8b7355;
        font-weight: 500;
    }

    .sender-name {
        font-size: 0.95rem;
        color: #333;
        font-weight: 600;
    }

    .entry-date {
        display: flex;
        align-items: center;
        gap: 6px;
        font-size: 0.85rem;
        color: #8b7355;
    }

    .entry-actions {
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .entry-number {
        background: linear-gradient(135deg, #d4a574 0%, #b8860b 100%);
        color: white;
        padding: 4px 10px;
        border-radius: 20px;
        font-size: 0.75rem;
        font-weight: 600;
    }

    .delete-form {
        display: inline;
        margin: 0;
        padding: 0;
    }

    .btn-delete {
        background: transparent;
        border: none;
        cursor: pointer;
        font-size: 1rem;
        padding: 4px 8px;
        border-radius: 6px;
        transition: all 0.2s ease;
        opacity: 0.6;
    }

    .btn-delete:hover {
        background: #fee2e2;
        opacity: 1;
    }

    .entry-content {
        padding: 20px;
        position: relative;
        min-height: 120px;
        max-height: 250px;
        overflow-y: auto;
    }

    .entry-content::-webkit-scrollbar {
        width: 6px;
    }

    .entry-content::-webkit-scrollbar-track {
        background: #f5efe6;
        border-radius: 3px;
    }

    .entry-content::-webkit-scrollbar-thumb {
        background: #d4a574;
        border-radius: 3px;
    }

    .entry-content::-webkit-scrollbar-thumb:hover {
        background: #b8860b;
    }

    .quote-mark {
        font-size: 3rem;
        font-family: Georgia, serif;
        color: #d4a574;
        opacity: 0.5;
        line-height: 1;
        position: absolute;
    }

    .quote-mark.start {
        top: 10px;
        left: 10px;
    }

    .quote-mark.end {
        bottom: 10px;
        right: 15px;
    }

    .entry-text {
        font-size: 1rem;
        line-height: 1.7;
        color: #4a4a4a;
        font-family: 'Georgia', serif;
        font-style: italic;
        padding: 10px 25px;
        white-space: pre-wrap;
        word-wrap: break-word;
    }

    .entry-footer {
        display: flex;
        justify-content: center;
        padding: 12px;
        background: linear-gradient(135deg, #faf5ed 0%, #f5efe6 100%);
        border-top: 1px solid #f0e6d8;
    }

    .entry-icon {
        font-size: 1.2rem;
    }

    .back-link {
        text-align: center;
        margin-top: 30px;
    }

    .btn-back {
        display: inline-flex;
        align-items: center;
        gap: 8px;
        padding: 12px 24px;
        background-color: #f5f5f5;
        color: #333;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 500;
        transition: all 0.2s ease;
    }

    .btn-back:hover {
        background-color: #e0e0e0;
        color: #333;
    }

    .action-bar {
        margin-bottom: 24px;
        text-align: center;
    }

    .btn-download-pdf {
        display: inline-flex;
        align-items: center;
        gap: 10px;
        padding: 14px 28px;
        background: linear-gradient(135deg, #d4a574 0%, #b8860b 100%);
        color: white;
        border: none;
        border-radius: 10px;
        font-size: 1rem;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        box-shadow: 0 4px 12px rgba(184, 134, 11, 0.3);
    }

    .btn-download-pdf:hover {
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(184, 134, 11, 0.4);
        background: linear-gradient(135deg, #b8860b 0%, #d4a574 100%);
    }

    .btn-download-pdf:active {
        transform: translateY(0);
    }

    @@media (max-width: 768px) {
        .stats-bar {
            gap: 20px;
            padding: 16px;
        }

        .stat-number {
            font-size: 1.2rem;
        }

        .entries-grid {
            grid-template-columns: 1fr;
            gap: 16px;
        }

        .page-header h1 {
            font-size: 1.8rem;
        }

        .entry-content {
            max-height: 200px;
        }

        .entry-text {
            font-size: 0.95rem;
            padding: 8px 20px;
        }

        .quote-mark {
            font-size: 2.5rem;
        }
    }
</style>
